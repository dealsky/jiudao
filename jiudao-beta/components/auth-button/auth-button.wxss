/* components/auth-button/auth-button.wxss */

.auth-button {
  width: 120rpx;
  height: 120rpx;
}

.auth-button button {
  padding: 0;
  font-size: 24rpx;
  width: 100%;
  height: 100%;
  line-height: 120rpx;
  border-radius: 100%;
  color: #666;
  background: #f5f5f5;
}

.auth-button button::after {
  border: none;
}
