/* components/journal-top.wxss */

.journal-top {
  position: relative;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #f3f3f3;
  background: #fff;
}

.journal-top .title {
  display: inline-block;
  margin: 27rpx 0 0 30rpx;
  line-height: 1;
}

.journal-top .title .number, .journal-top .title .number .symbal,
.journal-top .title .number .value {
  display: inline-block;
}

.journal-top .title .number .symbal {
  font-size: 32rpx;
}

.journal-top .title .number .value {
  font-size: 58rpx;
  font-weight: 500;
}

.journal-top .title .line {
  display: inline-block;
  margin: 0 15rpx 0 14rpx;
  width: 2rpx;
  height: 41rpx;
  background: #000;
}

.journal-top .title .date {
  display: inline-block;
  font-size: 0;
}

.journal-top .title .date .month, .journal-top .title .date .year {
  display: block;
}

.journal-top .title .date .month {
  font-size: 24rpx;
}

.journal-top .title .date .year {
  font-size: 20rpx;
  line-height: 16rpx;
}

.journal-top .like-wrapper {
  position: absolute;
  top: 31rpx;
  right: 100rpx;
}

.journal-top .share-wrapper {
  position: absolute;
  top: 38rpx;
  right: 31rpx;
}
