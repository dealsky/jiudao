/* components/share/share.wxss */

.share {
  position: relative;
  width: 28rpx;
  height: 28rpx;
}

.share button {
  position: relative;
  display: inline-block;
  vertical-align:top;
  padding: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  z-index: 2;
}

.share image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
